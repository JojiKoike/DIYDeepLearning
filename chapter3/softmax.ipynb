   "source": [
    "def softmax(a):\n",
    "    c = np.max(a)\n",
    "    return np.exp(a - c)/np.sum(np.exp(a - c))\n",
    "\n",
    "\n",
    "y = softmax(a)\n",
    "print(y)\n"
   ]
